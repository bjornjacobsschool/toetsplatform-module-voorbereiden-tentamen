<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<GridPane fx:controller="nl.han.toetsplatform.module.voorbereiden.controllers.samenstellen.SamenstellenController"
          xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Naam label en invoerveld -->
    <Label text="Tentamen opstellen"  GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0"><font>
        <Font size="20.0" />
    </font></Label>

    <!-- Mag toegevoegd worden wanneer er vragen in de vragenbank staan -->
    <!--<ListView GridPane.columnIndex="0" GridPane.RowIndex="1"></ListView>-->

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <Button fx:id="vraagToevoegenButton" text="Vraag toevoegen" onAction="#handleVraagToevoegenButtonAction"/>
    </HBox>



    <TableView fx:id="vragenTable" editable="true" layoutX="-12.0" layoutY="49.0" prefHeight="298.0" prefWidth="175.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columns>
            <TableColumn fx:id="vraagColumn" prefWidth="75.0" text="Vraag" />
            <TableColumn fx:id="puntenColumn" prefWidth="75.0" text="Punten" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <GridPane  GridPane.columnIndex="1"  GridPane.columnSpan="2"  GridPane.rowIndex="2">
        <!-- Knoppen -->
        <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Button fx:id="annulerenButton" text="Annuleren" onAction="#handleAnnulerenButtonAction"/>
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="tentamenOpslaanButton" text="Tentamen opslaan" onAction="#handleTentamenOpslaanButtonAction"/>
        </HBox>
    </GridPane>
</GridPane>