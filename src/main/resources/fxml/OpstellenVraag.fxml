<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="nl.han.toetsplatform.module.voorbereiden.controllers.samenstellen.VraagOpstelController">
    <HBox AnchorPane.topAnchor="5">
        <Label text="Naam: "/>
        <TextField fx:id="naamField">
        </TextField>
        <Label text="Thema:">
            <padding>
                <Insets left="50.0"/>
            </padding>
        </Label>
        <TextField fx:id="themaField"/>
    </HBox>


    <ScrollPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                AnchorPane.topAnchor="50"/>
    <AnchorPane fx:id="opstelContainer" AnchorPane.bottomAnchor="50" AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0" AnchorPane.topAnchor="50">

    </AnchorPane>
    <Button onAction="#btnOpslaanPressed" text="Save" AnchorPane.bottomAnchor="25" AnchorPane.rightAnchor="200"/>
    <Button onAction="#btnAnnuleerPressed" text="Annuleer" AnchorPane.bottomAnchor="25" AnchorPane.leftAnchor="200"/>
</AnchorPane>
